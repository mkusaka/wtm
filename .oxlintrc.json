{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "import"],
  "env": {
    "node": true,
    "es2022": true
  },
  "settings": {},
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "rules": {
    "eqeqeq": "warn",
    "no-console": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "typescript/no-explicit-any": "off",
    "sort-imports": "off",
    "import/prefer-default-export": "off",
    "func-style": "off",
    "no-magic-numbers": "off",
    "sort-keys": "off",
    "yoda": "off",
    "id-length": "off",
    "import/group-exports": "off",
    "typescript/consistent-type-imports": "warn"
  },
  "ignorePatterns": [
    "dist/**",
    "coverage/**",
    "node_modules/**",
    "*.test.ts",
    "*.test.js"
  ]
}