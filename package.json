{
  "name": "@mkusaka/wtm",
  "version": "0.0.0",
  "description": "Git worktree manager CLI tool",
  "type": "module",
  "bin": {
    "wtm": "./dist/src/bin/wtm.js"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "oxlint src --tsconfig tsconfig.json",
    "lint:eslint": "eslint src --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "workflow"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^8.0.1",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^8.56.0",
    "oxlint": "^1.6.0",
    "prettier": "^3.2.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}