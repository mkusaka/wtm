{
  "name": "@mkusaka/wtm",
  "version": "0.0.8",
  "description": "Git worktree manager CLI tool",
  "type": "module",
  "bin": {
    "wtm": "./dist/src/bin/wtm.js"
  },
  "scripts": {
    "start": "node dist/src/bin/wtm.js",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint src --tsconfig tsconfig.json",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm run build && pnpm run test && pnpm run lint",
    "postbuild": "chmod +x dist/src/bin/wtm.js"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "workflow"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "ink": "^6.0.1",
    "ink-select-input": "^6.2.0",
    "ora": "^8.2.0",
    "react": "^19.1.0",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/node": "24.0.11",
    "@types/react": "19.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "ink-testing-library": "4.0.0",
    "oxlint": "1.7.0",
    "prettier": "3.6.2",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkusaka/wtm.git"
  },
  "bugs": {
    "url": "https://github.com/mkusaka/wtm/issues"
  },
  "homepage": "https://github.com/mkusaka/wtm#readme"
}
